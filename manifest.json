{

  "manifest_version": 2,
  "name": "FidoVC",
  "version": "1.0",

  "description": "An extension that allows to use Verifiable Credentials",

  "icons": {
    "48": "icons/vc-48.png"
  },

  "background": {
    "scripts": 
    ["background_scripts/storageFromIdps.js",
    "background_scripts/parserVC.js",
    "background_scripts/getFromSp.js"]
  },

  // "content_scripts": [
  //   {
  //     "js": ["content_scripts/callSend.js"]
  //   }
  // ],

// "background_scripts/test.js"

  "browser_action": {
    "default_icon": "icons/vc-32.png",
    "default_popup": "popup/policyClick.html"
  },

  "permissions": [
    "<all_urls>",
    "https://fido/*",
    "https://example.com/*",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "activeTab",
    "contextMenus"
  ]
}