{

  "manifest_version": 2,
  "name": "FidoVC",
  "version": "1.0",

  "description": "Allow to read and write in a local database for a Fido2 with Verifiable Credentials use",

  "icons": {
    "48": "icons/vc-48.png"
  },

  "background": {
    "scripts": 
    ["background_scripts/storageFromIdps.js",
    "background_scripts/readCred.js",
    "background_scripts/getFromSp.js"]
  },

  // "browser_action": {
  //   "default_icon": "icons/vc-32.png",
  //   "default_title": "FidoVC",
  //   "default_popup": "popup/fidoPopup.html"
  // }

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage"
  ]
}